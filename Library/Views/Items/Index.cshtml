@{
  Layout = "_Layout";
}

@using Library.Models

<h1>Items Index</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Item item in Model)
    {
      <li>@Html.ActionLink($"{item.DisplayName}", "Details", new { id = item.ItemId })</li>
  
    }
    </ul>
}
<p>@Html.ActionLink("Add a new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
